@using System.Reflection
@using Microsoft.AspNetCore.Components.WebAssembly.Services
@using StoreCore.WebApp.Abstractions
@using StoreCore.WebApp.BaseBlazor
@inject NavigationManager NavigationManager
@inject IRouterConfig RouterConfig
@rendermode InteractiveAuto

<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="assemblies" OnNavigateAsync="RouterConfig.OnNavigateAsync">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        @{
            NavigationManager.NavigateTo("/Error");
        }
    </NotFound>
</Router>
@code {
    public static List<Assembly> assemblies = [];
}